{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "checkJs": true,
    "incremental": false,
    "esModuleInterop": true
  }
}
